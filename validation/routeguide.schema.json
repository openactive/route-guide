{
   "$schema":"https://json-schema.org/draft/2019-09/schema",
   "$id":"https://openactive.io/routes/validation/routeguide.schema.json",
   "$vocabulary":{
      "https://json-schema.org/draft/2019-09/vocab/core":true
   },
   "type":"object",
   "title":"JSON-LD schema for RouteGuide objects.",
   "required":[
      "@context",
      "@id",
      "@type",
      "name",
      "description",
      "activity",
      "distance",
      "startPoint"
   ],
   "properties":{
      "@context":{
         "type":"array",
         "items":{
            "type":"string",
            "pattern":"http(s)?://.+"
         }
      },
      "@id":{
         "type":"string",
         "pattern":"http(s)?://.+"
      },
      "@type":{
         "type":"string",
         "pattern":"RouteGuide"
      },
      "$ref":"#/definitions/RouteGuideCore",
      "segments":{
         "type":"array",
         "items":{
            "$ref":"#/definitions/RouteSegmentGuide"
         }
      },
      "isBasedOn":{
         "type":"array",
         "items":{
            "$ref":"#/definitions/RouteGuideCore"
         }
      }
   },
   "definitions":{
      "RouteGuideCore":{
         "properties":{
            "name":{
               "type":"string",
               "minLength":4,
               "maxLength":1024
            },
            "url":{
               "type":"string",
               "pattern":"http(s)?://.+"
            },
            "author":{
               "type":"array",
               "items":{
                  "anyOf":[
                     {
                        "$ref":"#/definitions/Person"
                     },
                     {
                        "$ref":"#/definitions/Organization"
                     }
                  ]
               }
            },
            "datePublished":{
               "type":"string",
               "minLength":8,
               "maxLength":128
            },
            "dateModified":{
               "type":"string",
               "minLength":8,
               "maxLength":128
            },
            "verificationRecord":{
               "$ref":"#/definitions/VerificationRecord"
            },
            "description":{
               "$ref":"#/destinations/Description"
            },
            "headline":{
               "$ref":"#/destinations/Headline"
            },
            "activity":{
               "type":"array",
               "items":{
                  "type":"string",
                  "pattern":"http(?)://.+"
               }
            },
            "distance":{
               "$ref":"#/definitions/QuantitativeValue"
            },
            "indicativeDuration":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/IndicativeDuration"
               }
            },
            "startPoint":{
               "$ref":"#/definitions/RoutePoint"
            },
            "endPoint":{
               "$ref":"#/definitions/RoutePoint"
            },
            "pointOfInterest":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/RoutePoint"
               }
            },
            "accessibilityDescription":{
               "type":"array",
               "items":{
                  "type":"string",
                  "minLength":4
               }
            },
            "gradient":{
               "$ref":"#/definitions/RouteGradient"
            },
            "surface":{
               "type":"array",
               "items":{
                  "type":"string"
               }
            },
            "routeDifficulty":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/RouteDifficulty"
               }
            },
            "geoPath":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/MapAsGeo"
               }
            },
            "mapImage":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/MapAsImage"
               }
            },
            "category":{
               "type":"array",
               "items":{
                  "anyOf":[
                     {
                        "type":"string"
                     },
                     {
                        "$ref":"#/definitions/Concept"
                     }
                  ]
               }
            },
            "additionalInformation":{
               "type":"array",
               "items":{
                  "$ref":"#definitions/Article"
               }
            },
            "amenityFeature":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/LocationFeatureSpecification"
               }
            },
            "isLoop":{
               "type":"boolean"
            },
            "riskInformation":{
               "$ref":"#/definitions/RouteRiskAdvisory"
            },
            "legalAdvisory":{
               "$ref":"#/definitions/RouteLegalAdvisory"
            },
            "routeAccessRestriction":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/RouteAccessRestriction"
               }
            },
            "suggestedEquipment":{
               "type":"array",
               "items":{
                  "type":"string"
               }
            },
            "image":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/ImageObject"
               }
            },
            "review":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/Review"
               }
            },
            "contactPoint":{
               "$ref":"#/definitions/ContactPoint"
            },
            "userContributedContent":{
               "$ref":"#/destinations/UserContributedContent"
            },
            "isJoinableThroughoutLength":{
               "type":"boolean"
            },
            "segmentGroups":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/RouteSegmentGroup"
               }
            }
         }
      },
      "RouteSegmentGuide":{
         "type":"object",
         "required":[
            "@type"
         ],
         "$ref":"#/definitions/RouteGuideCore",
         "properties":{
            "@type":{
               "type":"string",
               "pattern":"RouteSegmentGuide"
            },
            "sequence":{
               "type":"Integer"
            },
            "alternativeRouteSegmentGuide":{
               "type":"array",
               "items":{
                  "type":"string",
                  "pattern":"http(s)?://.+"
               }
            }
         }
      },
      "Person":{
         "type":"object",
         "properties":{

         }
      },
      "Organization":{
         "type":"object",
         "properties":{

         }
      },
      "Date":{
         "type":"object",
         "properties":{

         }
      },
      "DateTime":{
         "type":"object",
         "properties":{

         }
      },
      "VerificationRecord":{
         "type":"object",
         "properties":{
            "verifiedBy":{
               "type":"array",
               "items":{
                  "anyOf":[
                     {
                        "$ref":"#/definitions/Person"
                     },
                     {
                        "$ref":"#/definitions/Organization"
                     }
                  ]
               }
            }
         }
      },
      "QuantitativeValue":{
         "type":"object",
         "properties":{

         }
      },
      "IndicativeDuration":{
         "type":"object",
         "properties":{

         }
      },
      "RoutePoint":{
         "type":"object",
         "required":[
            "type",
            "description"
         ],
         "properties":{
            "@type":{
               "type":"string",
               "pattern":"RoutePoint"
            },
            "name":{
               "type":"string",
               "minLength":4,
               "maxLength":256
            },
            "geo":{
               "$ref":"#/definitions/GeoCoordinates"
            },
            "isAccessPoint":{
               "type":"boolean"
            },
            "isRecommendedAccessPoint":{
               "type":"boolean"
            },
            "mapReference":{
               "$ref":"#/definitions/MapReference"
            },
            "transportNote":{
               "$ref":"#/definitions/TransportNote"
            },
            "headline":{
               "$ref":"#/definitions/Headline"
            },
            "description":{
               "$ref":"#/definitions/Description"
            },
            "amenityFeature":{
               "$ref":"#/definitions/AmenityFeature"
            },
            "userContributedContent":{
               "$ref":"#/definitions/UserContributedContent"
            },
            "sameAs":{
               "type":"string",
               "pattern":"http(s)?://.+"
            }
         }
      },
      "RouteGradient":{
         "type":"object",
         "properties":{
            "@type":{
               "type":"string",
               "pattern":"RouteGradient"
            },
            "maxGradient":{
               "type":"string",
               "minLength":1,
               "maxLength":24
            },
            "avgGradient":{
               "type":"string",
               "minLength":1,
               "maxLength":24
            },
            "totalElevationGain":{
               "type":"integer"
            },
            "totalElevationLoss":{
               "type":"integer"
            },
            "gradientTerm":{
               "type":"string",
               "minLength":1,
               "maxLength":96
            },
            "gradientDefinitionURL":{
               "type":"string",
               "pattern":"http(s)?://.+"
            },
            "description":{
               "$ref":"#/definitions/Description"
            }
         }
      },
      "RouteDifficulty":{
         "type":"object",
         "properties":{

         }
      },
      "Map":{
         "type":"object",
         "properties":{

         }
      },
      "Concept":{
         "type":"object",
         "properties":{

         }
      },
      "Article":{
         "type":"object",
         "properties":{

         }
      },
      "LocationFeatureSpecification":{
         "type":"object",
         "properties":{

         }
      },
      "RouteRiskAdvisory":{
         "type":"object",
         "properties":{

         }
      },
      "RouteLegalAdvisory":{
         "type":"object",
         "properties":{

         }
      },
      "RouteAccessRestriction":{
         "type":"object",
         "properties":{

         }
      },
      "ImageObject":{
         "type":"object",
         "properties":{

         }
      },
      "Review":{
         "type":"object",
         "properties":{

         }
      },
      "ContactPoint":{
         "type":"object",
         "properties":{

         }
      },
      "CreativeWork":{
         "type":"object",
         "properties":{

         }
      },
      "MapAsImage":{
         "type":"object",
         "properties":{

         }
      },
      "MapAsGeo":{
         "type":"object",
         "properties":{

         }
      },
      "RouteSegmentGroup":{
         "type":"object",
         "properties":{

         },
         "GeoCoordinates":{
            "type":"object",
            "properties":{

            }
         },
         "MapReference":{
            "type":"object",
            "properties":{
               "@type":{
                  "type":"string",
                  "pattern":"MapReference"
               },
               "publisher":{
                  "type":"array",
                  "items":{
                     "anyOf":[
                        {
                           "$ref":"#/definitions/Person"
                        },
                        {
                           "$ref":"#/definitions/Person"
                        }
                     ]
                  }
               },
               "mapSeries":{
                  "type":"string",
                  "minLength":4,
                  "maxLength":128
               },
               "mapNumber":{
                  "type":"string",
                  "minLength":4,
                  "maxLength":128
               },
               "gridReference":{
                  "type":"string",
                  "minLength":4,
                  "maxLength":128
               }
            }
         },
         "TransportNote":{
            "type":"object",
            "properties":{

            },
            "Headline":{
               "type":"string",
               "minLength":4,
               "maxLength":512
            },
            "Description":{
               "type":"string",
               "minLength":4
            },
            "AmenityFeature":{
               "type":"array",
               "items":{
                  "$ref":"#/definitions/LocationFeatureSpecification"
               },
               "UserContributedContent":{
                  "type":"array",
                  "items":{
                     "$ref":"#/definitions/CreativeWork"
                  }
               }
            }
         }
      }
   }
}
